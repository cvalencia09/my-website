---
import SocialIcons from '../components/SocialIcons.astro';
import Header from "~/components/Header.astro";
import Footer from '../components/Footer.astro';
import '../styles/terminal-0.7.4.min.css';
import '../styles/animate-4.1.1.min.css';
import '../styles/global.css';

const { title = "Photo Gallery" } = Astro.props;


const socialLinks = {
  github: "https://github.com/cvalencia09",
  linkedin: "https://www.linkedin.com/in/cristi%C3%A1n-valencia-cassanello-3b796223/",
  email: "c.valenciacassanello@wustl.edu"
};

---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="preconnect" href="https://rsms.me" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="terminal">
    <div class="terminal">
      <Header  />
    
      <main class="container mx-auto px-4 py-16">
        <slot />
        <Footer />
        <SocialIcons socialIcons={socialLinks} />
      </main>
    </div>
  </body>
</html>

<style>
  /* Override h1 decoration specifically for this layout */
  :global(h1::after) {
    display: none !important;
  }

  :global(.dark) {
    background-color: #222225;
    color: #e8e9ed;
  }
</style>


<script>
        import "../scripts/menu.js";
</script>