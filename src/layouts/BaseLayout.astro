---
import SocialIcons from '../components/SocialIcons.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/terminal-0.7.4.min.css';
import '../styles/animate-4.1.1.min.css';
import '../styles/global.css';

const { pageTitle } = Astro.props;

const socialLinks = {
  github: "https://github.com/cvalencia09",
  linkedin: "https://www.linkedin.com/in/cristi%C3%A1n-valencia-cassanello-3b796223/",
  email: "c.valenciacassanello@wustl.edu"
};


---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="terminal">
    <Header />
    <div class="container animated zoomIn fast" >
      <h1>{pageTitle}</h1>
      <slot />
      <Footer />
      <SocialIcons socialIcons={socialLinks} />
    </div>
  </body>
</html>

<style>
  :global(.dark) {
    background-color: #222225;
    color: #e8e9ed;
  }
</style>

<script>
  import "../scripts/menu.js";
</script>