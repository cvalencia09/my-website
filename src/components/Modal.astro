---
const { id = 'modal', isOpen = false } = Astro.props;
---

<div id={id} class={`modal ${isOpen ? '' : 'hidden'}`}>
  <div class="modal-overlay fixed inset-0 bg-black/80 z-40">
    <div class="modal-content fixed inset-4 z-50 flex items-center justify-center">
      <img 
        class="max-h-[90vh] w-auto object-contain"
      />
      <button
        class="modal-close absolute top-4 right-4 p-2 text-white hover:text-gray-300 text-2xl"
      >
        Ã—
      </button>
    </div>
  </div>
</div>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
  }
</style>